pipeline {
    agent any
    
    tools {
        maven 'Maven-3.9.9'  // âœ… Matches your Global Tool name exactly
    }
    
    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/rakesh94452/maven-web-app.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'  // âœ… Faster builds
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'  // âœ… Add tests
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    def image = docker.build("rakesh/mavenwebapp:${BUILD_NUMBER}")
                    docker.image("rakesh/mavenwebapp:${BUILD_NUMBER}").push()
                }
            }
        }
        stage('Deploy to K8s') {
            steps {
                sh 'kubectl apply -f maven-web-app-deploy.yml'
                sh 'kubectl get svc maven-web-app-service'
            }
        }
    }
    
    post {
        always {
            sh 'docker system prune -f'
        }
        success {
            echo 'ğŸ‰ Deployment successful!'
        }
        failure {
            echo 'âŒ Build failed!'
        }
    }
}
